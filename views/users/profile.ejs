<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="../../styles/profile.css" />
<div class="recipe-container h-100">
    
    
    <div class="row grid-row h-100" style="width: 100%">
      <div class="col-md-4 h-100" id="body-picture">
        <div id="profile" class="card w-30 sticky-top">
            <img  id ="profile-pic" class="card-img-top" src="../../img/profile-pic.jpg" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title"><%= user.username %></h4>
              <h5 class = "edit"> Edit Profile</h5>
              <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
            </div>
          </div>
      </div>

      
      <div class="col-md-8 h-100" id="body-description">
        
            <div class="row">
                <h1>Own Recipe</h1>
                <% for(let recipe of user.ownRecipes) {%> 
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card rounded-10">
                            <img class="card-img-top" alt="" src="<%=recipe.image%>">
                            <div class="card-body bg-dark d-flex justify-content-between pl-1 pb-0 pt-1">
                            
                            
                                <h5 class="card-title h5  "> <%= recipe.name %> <span style="margin-left:1rem;"><i class="fa-regular fa-heart text-danger"></i></span></h5>
                                
                                
                                  
                                        
                                <div class="stars">
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning text-white"></i>
    
                                </div>
                              
                                        
                                        
    
                            </div>
                            <div class="card-body bg-dark d-flex justify-content-between pl-1 pb-0 pt-0">
                                
                                
                                <h8 class="card-title h6 text-muted "> <%= recipe.descriptions %> </h8>
                            
                            
                            
                            
                                <a href="/recipes/<%=recipe._id%>" class="btn btn-primary">Cook me</a>
                            
                            
                            
                            </div>
                            <!-- <div class="card-body">
                                <h5 class="card-title"><%= recipe.name %> </h5>
                                <p class="card-text"><%= recipe.descriptions %> </p>
                                <a href="/recipes/<%=recipe._id%>" class="btn btn-primary">Cook me</a>
                            </div> -->
                        </div>
                    </div>
                <% } %> 
            </div>
            <div class="row">
                <h1>Saved Recipe</h1>
                <% for(let recipe of user.savedRecipes) {%> 
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card rounded-10">
                            <img class="card-img-top" alt="" src="<%=recipe.image%>">
                            <div class="card-body bg-dark d-flex justify-content-between pl-1 pb-0 pt-1">
                            
                            
                                <h5 class="card-title h5  "> <%= recipe.name %> <span style="margin-left:1rem;"><i class="fa-regular fa-heart text-danger"></i></span></h5>
                                
                                
                                  
                                        
                                <div class="stars">
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <i class="fa-solid fa-star text-warning text-white"></i>
    
                                </div>
                              
                                        
                                        
    
                            </div>
                            <div class="card-body bg-dark d-flex justify-content-between pl-1 pb-0 pt-0">
                                
                                
                                <h8 class="card-title h6 text-muted "> <%= recipe.descriptions %> </h8>
                            
                            
                            
                            
                                <a href="/recipes/<%=recipe._id%>" class="btn btn-primary">Cook me</a>
                            
                            
                            
                            </div>
                            <!-- <div class="card-body">
                                <h5 class="card-title"><%= recipe.name %> </h5>
                                <p class="card-text"><%= recipe.descriptions %> </p>
                                <a href="/recipes/<%=recipe._id%>" class="btn btn-primary">Cook me</a>
                            </div> -->
                        </div>
                    </div>
                <% } %> 
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
