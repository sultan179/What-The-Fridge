<% for (let recipe of recipes){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=recipe.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= recipe.name %> </h5>
                <p class="card-text"><%= recipe.descriptions %></p>
                <a class="btn btn-primary" href="/recipes/<%=recipe._id%>">View <%=recipe.name%></a>
            </div>
        </div>
    </div>
</div>
<% }%>