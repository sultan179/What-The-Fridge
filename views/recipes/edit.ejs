<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit recipe</h1>
    <div class="col-6 offset-3">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="recipe[name]"
                    value="<%=recipe.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="recipe[image]"
                    value="<%=recipe.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="recipe[description]"
                    required><%= recipe.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update recipe</button>
            </div>
        </form>
        <a href="/recipes/<%= recipe._id%>">Back To recipe</a>

    </div>
</div>
